#!/bin/bash

# Logging
chunkc core::log_file stdout
chunkc core::log_level none

# Plugins
chunkc core::plugin_dir /usr/local/opt/chunkwm/share/chunkwm/plugins
chunkc core::hotload 0
#chunkc core::load border.so
chunkc core::load tiling.so
#chunkc core::load ffm.so

# spacing
chunkc set global_desktop_offset_top     25
chunkc set global_desktop_offset_bottom  0
chunkc set global_desktop_offset_left    0
chunkc set global_desktop_offset_right   0
chunkc set global_desktop_offset_gap     4

# chunkwm-tiling & spacing
chunkc set global_desktop_mode           bsp
chunkc set bsp_spawn_left                1
chunkc set bsp_optimal_ratio             1.618
chunkc set bsp_split_mode                optimal
chunkc set bsp_split_ratio               0.5
chunkc set desktop_padding_step_size     10.0
chunkc set desktop_gap_step_size         5.0
chunkc set monitor_focus_cycle           1
chunkc set window_focus_cycle            monitor

# Mouse
chunkc set mouse_follows_focus           off
chunkc set window_float_next             0
chunkc set window_region_locked          1
chunkc set mouse_move_window             \"fn 1\"
chunkc set mouse_resize_window           \"fn 2\"
chunkc set mouse_motion_interval         35

# chwm-sa
chunkc set window_float_topmost          0
chunkc set window_fade_inactive          0
chunkc set window_fade_alpha             0.85
chunkc set window_fade_duration          0.25
chunkc set window_use_cgs_move           0

# Focused windows
# chunkc set focused_border_color          0xff0f6288
# chunkc set focused_border_width          5
# chunkc set focused_border_radius         0
# chunkc set focused_border_skip_floating  0
# chunkc set preselect_border_color        0xffd75f5f
# chunkc set preselect_border_width        5



# Desktops configuration
## 1 Web
chunkc set 1_desktop_mode                monocle
## 2 Code
chunkc set 2_desktop_mode                monocle
## 3 Test
chunkc set 3_desktop_mode                float
## 4 CLI
chunkc set 4_desktop_mode                bsp
## 5 ?
chunkc set 5_desktop_mode                float
## 6 Media
chunkc set 6_desktop_mode                float


# window floating rules
chunkc tiling::rule --owner Finder --name Copy --state float
chunkc tiling::rule --name \"The Unarchiver\" --state float
chunkc tiling::rule --owner \"App Store\" --state float
chunkc tiling::rule --owner Emacs --except "^$" --state tile


# window desktop rules
chunkc tiling::rule --name \"Firefox\" --desktop 1
chunkc tiling::rule --name \"Code\" --desktop 2
chunkc tiling::rule --name \"Simulator\" --desktop 3
chunkc tiling::rule --name \"iTerm\" --desktop 4
chunkc tiling::rule --name \"Spotify\" --desktop 5
chunkc tiling::rule --name \"Steam\" --desktop 6



